<head>
  <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <script src="https://kit.fontawesome.com/ebd6827f1e.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/profile.css">         
</head>

<header>
<nav class="navbar navbar-default">
  <div class="container fluid">
    <div class="navbar-header">
        <a href="/" class="navbar-brand">PICKLE WAGON</a>
    </div> 
  </div>
</nav>
</header>


<main class="container">
  <div class="row justify-content-center">
    <section class="col-6 mt-5 borders">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label base-text mt-2">Email address</label>
          <input
            type="email"
            class="form-control borders"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label base-text">Password</label>
          <input
            type="password"
            class="form-control borders"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <button type="submit" class="btn highlight-button">Submit</button>
      </form>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>