<body>

      <div class="container-md p-2">
        <div class="row">
            <div class="col">
              <div class="card col-sm-10 borders custom-base">
                <img class="img-responsive p-4" src="<%= post.image%>" alt="">
                    <h4><%= post.title %></h4>
                    <p><%= post.caption %></p>
                    <div class="row justify-content-between">
                      <form
                        class="col-1"
                        action="/post/likePost/<%= post.id %>?_method=PUT"
                        method="POST">
                        <button class="btn borders fa fa-heart" type="submit"></button>
                      </form>
                      <h5 class="col-4">Likes: <%= post.likes %></h3>
                      <%if(post.user == user.id){ %>
                      <form
                        action="/post/deletePost/<%= post.id %>?_method=DELETE"
                        method="POST"
                        class="col-3">
                        <button class="btn borders fa fa-trash" type="submit"></button>
                      </form>
                      <%}%>
                    </div>
              </div>
            </div>
            <!-- Creating comment form -->
            <div class="col">
              <div class="col-md p-2">
                <div class="p-5 container col borders">
                        <div class="box-footer">
                            <form action="/comment/createComment/<%=post._id%>" method="POST">
                              <div class="comment-text">
                                    <label for="comment" class="form-label"></label>
                                    <input type="text" class="form-control borders custom-base" id="comment" name="comment" placeholder="Add a comment">
                              </div>
                              <button type="submit" class="btn borders mt-3">Submit</button>
                            </form>
                        </div>
                </div>
              </div>

              <!-- Display comments using For Loop -->
              
                <div class="p-2 container">
                  <ul class="list-unstyled">
                    <div class="container p-2">
                      <% for(var i=0; i<comments.length; i++) {%>
                        <li class="my-3 p-2 borders">
                          <%= comments[i].comment%>
                          <p class="p-2"><%= comments[i].userName %></p>
                        </li>
                      <% } %>
                    </div>
                  </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
</body>





